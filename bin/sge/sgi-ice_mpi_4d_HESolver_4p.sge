#!/bin/bash 
#$-o $HOME/SGpp/bin/sge/sgpp_4d_hesolver_ice_4p.$JOB_ID.out -j y 
#$-N sgpp_4d_hesolver_ice_4p 
#$-l h_rt=01:00:00 
#$-S /bin/bash 
#$-pe mpi_ice 16
#$-M heinecke@in.tum.de 

. /etc/profile 

#hostname 

module unload ccomp
module unload mpi.mpt

module load ccomp/intel/12.0
module load mpi.intel

#export KMP_AFFINITY=granularity=fine,compact,1,0
export OMP_NUM_THREADS=8
export I_MPI_PIN_MODE=mpd
export I_MPI_DEBUG=4
export I_MPI_PIN_DOMAIN=socket

mpiexec -ppn 2 -genv OMP_NUM_THREADS 8 -genv I_MPI_PIN_DOMAIN socket -n 4 $HOME/SGpp/bin/HESolverMPI PoissonEquation 4 2 11 0.0 3.0 smooth 0.00001 4000

jobperf -j $JOB_ID 

