CC = g++
DEBUG = 
SRCDIR = src/sgpp/
BUILDDIR = tmp/build_native/
OUTDIR = bin/
LIBDIR = lib/sgpp/
CFLAGS = -Wall -pedantic -ansi -c -Wno-long-long -fno-strict-aliasing -O3 -funroll-loops -pthread -ffloat-store -Isrc/sgpp/
LFLAGS = -Wall -pedantic -ansi -O3 -pthread
OBJS = NativeCppBlackScholesSolver.o libsgpp.a

default : $(OBJS)
	$(CC) $(LFLAGS) $(BUILDDIR)NativeCppBlackScholesSolver.o $(LIBDIR)libsgpp.a -o $(OUTDIR)NativeCppBlackScholesSolver
	
NativeCppBlackScholesSolver.o : $(SRCDIR)application/pde/NativeCppBlackScholesSolver.cpp
	$(CC) $(CFLAGS) -o $(BUILDDIR)NativeCppBlackScholesSolver.o $(SRCDIR)application/pde/NativeCppBlackScholesSolver.cpp
	
libsgpp.a :
	make -f makefileSGppLIB
		
clean:
	\rm tmp/build_native/*.o
	make -f makefileSGppLIB clean
