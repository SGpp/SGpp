{
    "dataSource": {
        "filePath": "../datasets/mnist/mnist_2_5_7x7_200.train.arff",
        "batchSize": 50
    },
    "fitter": {
        "type": "classification",
        "gridConfig": {
            "gridType": "modlinear",
            "level": "3"
        },
        "adaptivityConfig":{
            "numRefinements": "2",
            "noPoints": "5",
            "threshold": "0.001"
        },
        "regularizationConfig":{
            "lambda": "10e-2"
        },
        "densityEstimationConfig":{
            "densityEstimationType": "decomposition",
            "matrixDecompositionType": "chol"
        },
        "learner" : {
            "usePrior" : true,
            "beta" : 1.0
        },
        "geometryConfig": {
            "dim":[7, 7],
            "stencil": "DN"
        }
    }
}
