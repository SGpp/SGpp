{
    "dataSource": {
        "filePath": "../datasets/dataread/simple.arff",
        "batchSize": 10
    },
    "fitter": {
        "type": "classification",
        "gridConfig": {
            "gridType": "modlinear",
            "level": "3"
        },
        "adaptivityConfig":{
            "numRefinements": "10",
            "noPoints": "5",
            "threshold": "0.001"
        },
        "regularizationConfig":{
            "lambda": "10e-2"
        },
        "densityEstimationConfig":{
            "densityEstimationType": "decomposition",
            "matrixDecompositionType": "chol"
        },
        "learner" : {
            "usePrior" : true,
            "beta" : 1.0
        },
        "geometryConfig": {
            "dim":[4, 1],
            "stencil": "DN"
        }
    }
}
