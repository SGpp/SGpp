{
	"dataSource": {
		"filePath": "../datasets/irisFlower/irisnorm.arff",
		"fileType": "arff",
		"hasTargets" : true,
		"batchSize" : 0,
		"epochs": 50,
		"validationPortion" : 0.5,
		"shuffling" : "random",
		"randomSeed": -1,
		"readinClasses": [1,2,3]
	},
	"scorer": {
		"metric": "Accuracy"
	},
	"fitter": {
		"type": "classification",
		"gridConfig": {
			"generalGridType": "component",
			"gridType": "linear",
			"level": 1
		},
		"adaptivityConfig": {
				"numRefinements": 50,
				"threshold": 0.001,
				"maxLevelType": false,
				"noPoints": 10,
				"refinementIndicator" : "DataBased",
				"errorBasedRefinement" : true,
				"errorMinInterval" : 1,
				"errorBufferSize" : 2,
				"errorConvergenceThreshold" : 0.001
		},
		"regularizationConfig": {
			"lambda": 1e-2
		},
		"densityEstimationConfig" : {
			"densityEstimationType" : "decomposition",
			"decomposition": "Chol"
		},
		"learner" : {
			"usePrior" : true,
			"beta" : 1.0
		}
	}
}


