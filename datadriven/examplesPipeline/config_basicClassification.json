{
    "dataSource": {
        "filePath": "../datasets/ripley/ripleyGarcke.train.arff",
        "hasTargets": true,
        "batchSize": 10,
        "validationPortion": 0.2,
        "epochs": 2,
        "shuffling": "random",
        "randomSeed": 41
    },
    "scorer": {
        "metric": "accuracy"
    },
    "fitter": {
        "type": "classification",
        "gridConfig": {
            "gridType": "modlinear",
            "level": 5
        },
        "adaptivityConfig": {
            "numRefinements": 100,
            "noPoints": 10,
            "refinementIndicator": "classification",
            "penalizeLevels": true,
            "errorBasedRefinement": true,
            "errorMinInterval": 1,
            "errorBufferSize": 2,
            "errorConvergenceThreshold": 0.001
        },
        "regularizationConfig": {
            "lambda": 1e-1
        },
        "densityEstimationConfig": {
            "densityEstimationType": "decomposition",
            "matrixDecompositionType": "chol"
        },
        "learner": {
            "usePrior": true,
            "beta": 1.0
        }
    },
    "visualization": {
        "generalConfig": {
            "algorithm": ["tsne", "heatmaps"],
            "targetDirectory": "./output",
            "targetFileType": "json",
            "numBatches": 1
        },
        "parameters": {
            "perplexity": 30,
            "theta": 0.5,
            "seed": 150,
            "maxNumberIterations": 1000,
            "targetDimension": 2,
            "numberCores": 1
        }
    }
}
