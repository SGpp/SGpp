import ModuleHelper

Import("*")

if (env["USE_OCL"]) and (env["COMPILER"].lower() == "openmpi"):
  module.scanSource(".")
if (env["USE_OCL"]) and (env["COMPILER"].lower() == "mpich"):
  module.scanSource(".")
if (env["USE_OCL"]) and (env["COMPILER"].lower() == "intel.mpi"):
  module.scanSource(".")
if (env["USE_OCL"]) and (env["CXX"].lower() == "mpicxx"):
  module.scanSource(".")