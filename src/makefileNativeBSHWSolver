SRCDIR = ./../../../src/application_cpp/
BUILDDIR = ./
BINDIR = ./../../../bin/
LIBDIR = ./../../../lib/sgpp/
OBJS = NativeBSHWSolver.o

default: $(OBJS)
	$(CC) $(LFLAGS) $(BUILDDIR)NativeBSHWSolver.o $(LIBDIR)$(LIBNAME) -o $(BINDIR)$(BINNAME)
	cp $(BINDIR)$(BINNAME) $(BINDIR)BSHWSolver
	
NativeBSHWSolver.o : $(SRCDIR)NativeBSHWSolver.cpp
	$(CC) $(CFLAGS) -o $(BUILDDIR)NativeBSHWSolver.o $(SRCDIR)NativeBSHWSolver.cpp
			
clean:
	rm *