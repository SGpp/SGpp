SRCDIR = ./../../../src/application_cpp/
BUILDDIR = ./
BINDIR = ./../../../bin/
LIBDIR = ./../../../lib/sgpp/
OBJS = NativeCppHestonSolver.o

default: $(OBJS)
	$(CC) $(LFLAGS) $(BUILDDIR)NativeCppHestonSolver.o $(LIBDIR)$(LIBNAME) -o $(BINDIR)$(BINNAME)
	cp $(BINDIR)$(BINNAME) $(BINDIR)HestonSolver
	
NativeCppHestonSolver.o : $(SRCDIR)NativeCppHestonSolver.cpp
	$(CC) $(CFLAGS) -o $(BUILDDIR)NativeCppHestonSolver.o $(SRCDIR)NativeCppHestonSolver.cpp
			
clean:
	rm *