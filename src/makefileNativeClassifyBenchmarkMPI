SRCDIR = ./../../../src/application_cpp/
BUILDDIR = ./
BINDIR = ./../../../bin/
LIBDIR = ./../../../lib/sgpp/
OBJS = NativeCppClassifyBenchmarkMPI.o
#SCALASCA = scalasca -instrument 
#POSTFIX = scalasca

default: $(OBJS)
	$(SCALASCA)$(CC) $(LFLAGS) $(BUILDDIR)NativeCppClassifyBenchmarkMPI.o $(LIBDIR)$(LIBNAME) -o $(BINDIR)$(BINNAME)$(POSTFIX)
	cp $(BINDIR)$(BINNAME)$(POSTFIX) $(BINDIR)ClassifyBenchmarkMPI$(POSTFIX)
	cp $(BINDIR)$(BINNAME) $(BINDIR)$(BINNAME)_$(EXT)
	
NativeCppClassifyBenchmarkMPI.o : $(SRCDIR)NativeCppClassifyBenchmarkMPI.cpp
	$(CC) $(CFLAGS) -o $(BUILDDIR)NativeCppClassifyBenchmarkMPI.o $(SRCDIR)NativeCppClassifyBenchmarkMPI.cpp
			
clean:
	rm *
