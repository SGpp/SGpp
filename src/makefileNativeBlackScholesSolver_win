SRCDIR = ./../../../src/application_cpp/
BUILDDIR = ./
BINDIR = ./../../../bin/
LIBDIR = ./../../../lib/sgpp/
OBJS = NativeCppBlackScholesSolver.obj

default: $(OBJS)
	$(CC) -o $(BINDIR)$(BINNAME) $(LFLAGS) $(BUILDDIR)NativeCppBlackScholesSolver.obj $(LIBDIR)$(LIBNAME)
	cp $(BINDIR)$(BINNAME) $(BINDIR)BSSolver.exe
	
NativeCppBlackScholesSolver.obj : $(SRCDIR)NativeCppBlackScholesSolver.cpp
	$(CC) $(CFLAGS) -o $(BUILDDIR)NativeCppBlackScholesSolver.obj $(SRCDIR)NativeCppBlackScholesSolver.cpp
			
clean:
	rm *