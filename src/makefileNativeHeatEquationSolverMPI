SRCDIR = ./../../../src/application_cpp/
BUILDDIR = ./
BINDIR = ./../../../bin/
LIBDIR = ./../../../lib/sgpp/
OBJS = NativeCppHeatEquationSolverMPI.o

default : $(OBJS)
	$(CC) $(LFLAGS) $(BUILDDIR)NativeCppHeatEquationSolverMPI.o $(LIBDIR)$(LIBNAME) -o $(BINDIR)$(BINNAME)
	cp $(BINDIR)$(BINNAME) $(BINDIR)HESolverMPI
	
NativeCppHeatEquationSolverMPI.o : $(SRCDIR)NativeCppHeatEquationSolverMPI.cpp
	$(CC) $(CFLAGS) -o $(BUILDDIR)NativeCppHeatEquationSolverMPI.o $(SRCDIR)NativeCppHeatEquationSolverMPI.cpp
		
clean :
	rm *