SRCDIR = ./../../../src/application_cpp/
BUILDDIR = ./
BINDIR = ./../../../bin/
LIBDIR = ./../../../lib/sgpp/
OBJS = NativeCppBlackScholesSolver.o

default: $(OBJS)
	$(CC) $(LFLAGS) $(BUILDDIR)NativeCppBlackScholesSolver.o $(LIBDIR)$(LIBNAME) -o $(BINDIR)$(BINNAME)
	cp $(BINDIR)$(BINNAME) $(BINDIR)BSSolver
	
NativeCppBlackScholesSolver.o : $(SRCDIR)NativeCppBlackScholesSolver.cpp
	$(CC) $(CFLAGS) -o $(BUILDDIR)NativeCppBlackScholesSolver.o $(SRCDIR)NativeCppBlackScholesSolver.cpp
			
clean:
	rm *