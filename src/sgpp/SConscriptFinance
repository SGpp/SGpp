sg_env.Append(CPPPATH=['#/src/sgpp'])

src_objs_finance = sg_env.SharedObject(srcs)
Export('src_objs_finance')

libsgppfinance = sg_env.SharedLibrary(target="sgppfinance", source = src_objs_finance, SHLIBPREFIX = 'lib')
libsgppfinancestatic = sg_env.StaticLibrary(target="sgppfinance", source = src_objs_finance, SHLIBPREFIX = 'lib')

Export('libsgppfinance')
Export('libsgppfinancestatic')
