Import("env")

srcs = Split("""
solver/ode/AdamsBashforth.cpp
solver/ode/CrankNicolson.cpp
solver/ode/Euler.cpp
solver/ode/StepsizeControlBDF.cpp
solver/ode/StepsizeControlEJ.cpp
solver/ode/StepsizeControlH.cpp
solver/ode/VarTimestep.cpp
solver/sle/BiCGStab.cpp
solver/sle/ConjugateGradients.cpp
solver/sle/ConjugateGradientsSP.cpp
""")



sg_env = env.Clone()

sg_env.Append(CPPPATH=['#/src/sgpp'])

src_objs_solver = sg_env.SharedObject(srcs)
Export('src_objs_solver')

libsgppsolver = sg_env.SharedLibrary(target="sgppsolver", source = src_objs_solver, SHLIBPREFIX = 'lib')
libsgppsolverstatic = sg_env.StaticLibrary(target="sgppsolver", source = src_objs_solver, SHLIBPREFIX = 'lib')

Export('libsgppsolver')
Export('libsgppsolverstatic')
