Import("env")

srcs = Split("""
DataVector.cpp
GridFactory.cpp
GridFactoryImpl.cpp

StandardOperations.cpp
LinearOperations.cpp
ModLinearOperations.cpp
PolyOperations.cpp
ModPolyOperations.cpp
OperationHierarchisationLinear.cpp
""")



sg_env = env.Clone()

sg_env.Append(CPPPATH=['#/src/sgpp'])

src_objs = sg_env.SharedObject(srcs)
Export('src_objs')
