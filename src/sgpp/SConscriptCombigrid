Import("env")

srcs = Split("""
grid/combination/FullGrid.cpp
grid/combination/FullGridSet.cpp
grid/combination/LinearFullGrid.cpp
combigrid/domain/CombiAtanSpecialStretching.cpp
combigrid/domain/CombiDomain1D.cpp
combigrid/domain/CombiGridDomain.cpp
combigrid/domain/CombiTanStretching.cpp
combigrid/domain/CombiUniformStretching.cpp
""")

sg_env = env.Clone()

sg_env.Append(CPPPATH=['#/src/sgpp'])

src_objs_combigrid = sg_env.SharedObject(srcs)
Export('src_objs_combigrid')

libsgppcombigrid = sg_env.SharedLibrary(target="sgppcombigrid", source = src_objs_combigrid, SHLIBPREFIX = 'lib')
libsgppcombigridstatic = sg_env.StaticLibrary(target="sgppcombigrid", source = src_objs_combigrid, SHLIBPREFIX = 'lib')

Export('libsgppcombigrid')
Export('libsgppcombigridstatic')
