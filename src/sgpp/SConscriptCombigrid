Import("env")

srcs = Split("""
grid/combination/FullGrid.cpp
grid/combination/FullGridSet.cpp
grid/combination/LinearFullGrid.cpp
""")



sg_env = env.Clone()

sg_env.Append(CPPPATH=['#/src/sgpp'])

src_objs_combigrid = sg_env.SharedObject(srcs)
Export('src_objs_combigrid')

libsgppcombigrid = sg_env.SharedLibrary(target="sgppcombigrid", source = src_objs_combigrid, SHLIBPREFIX = 'lib')
#libsgpp = sg_env.SharedLibrary(target="sgpp", source = srcs + src_objs, SHLIBPREFIX = '_')
Export('libsgppcombigrid')
