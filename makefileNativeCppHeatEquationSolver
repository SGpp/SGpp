CC = g++
DEBUG = 
SRCDIR = src/sgpp/
BUILDDIR = tmp/build_native/
OUTDIR = bin/
LIBDIR = lib/sgpp/
CFLAGS = -Wall -pedantic -ansi -c -Wno-long-long -fno-strict-aliasing -O3 -funroll-loops -pthread -ffloat-store -Isrc/sgpp/
LFLAGS = -Wall -pedantic -ansi -O3 -pthread
OBJS = NativeCppHeatEquationSolver.o libsgpp.a

default : $(OBJS)
	$(CC) $(LFLAGS) $(BUILDDIR)NativeCppHeatEquationSolver.o $(LIBDIR)libsgpp.a -o $(OUTDIR)NativeCppHeatEquationSolver
	
NativeCppHeatEquationSolver.o : $(SRCDIR)application/pde/NativeCppHeatEquationSolver.cpp
	$(CC) $(CFLAGS) -o $(BUILDDIR)NativeCppHeatEquationSolver.o $(SRCDIR)application/pde/NativeCppHeatEquationSolver.cpp
	
libsgpp.a :
	make -f makefileSGppLIB
		
clean:
	\rm tmp/build_native/*.o
	make -f makefileSGppLIB clean