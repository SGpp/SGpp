import ModuleHelper

Import("*")

moduleDependencies = ["sgppbase"]
module = ModuleHelper.Module(moduleDependencies)

module.scanSource()
module.buildLibrary()
module.generatePythonDocstrings()
module.buildExamples()
module.runExamples()
module.buildBoostTests()
module.runBoostTests()
module.checkStyle()
