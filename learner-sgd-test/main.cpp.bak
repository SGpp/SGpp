#include "PerformanceTest.hpp"
#include <iostream>

int main() {
	size_t dim = 3;
	int level = 4;
	int trainSize = 10;
	double maxIterations[] = {10, 15, 100, 1000, 100000};
	double eps = 0.001;
	double lambda = 0.01;
	double gamma = 0.0001;

	int seed = 1208108;

	sg::test::PerformanceTest p(true);

	for (int i = 0; i < 5; i++) {
		std::cout << "Max iterations: " << maxIterations[i] << std::endl;

		p.runFriedman(dim, level, trainSize, seed, maxIterations[i], eps, lambda, gamma);

		std::cout << "Error vector:" << std::endl;
		std::cout << p.getError().toString() << std::endl;
		std::cout << std::endl;
	}
}
